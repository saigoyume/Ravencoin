
## <summary>policy for carrot</summary>


########################################
## <summary>
##	Transition to carrot.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`carrot_domtrans',`
	gen_require(`
		type carrot_t, carrot_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, carrot_exec_t, carrot_t)
')


########################################
## <summary>
##	Execute carrot server in the carrot domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`carrot_initrc_domtrans',`
	gen_require(`
		type carrot_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, carrot_initrc_exec_t)
')


########################################
## <summary>
##	Search carrot lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`carrot_search_lib',`
	gen_require(`
		type carrot_var_lib_t;
	')

	allow $1 carrot_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read carrot lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`carrot_read_lib_files',`
	gen_require(`
		type carrot_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, carrot_var_lib_t, carrot_var_lib_t)
')

########################################
